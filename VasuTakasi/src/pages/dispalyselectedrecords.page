<apex:page controller="getpassedrecords" >
  <apex:form >
   <apex:pageBlock >
    <apex:pageBlockSection >
     <apex:pageBlockTable value="{!records}" var="r">
      <apex:column headerValue="name">
       {!r.name}
      </apex:column>
      <apex:column headerValue="phone">
       {!r.Phone__c}
      </apex:column>
     </apex:pageBlockTable>
    </apex:pageBlockSection>
   </apex:pageBlock>
  </apex:form>
</apex:page>